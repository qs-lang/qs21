{def> time> {trim:{sys> date +%s}}}
{def> time-hr> {trim:{sys> date +%H}}}
{def> time-min> {trim:{sys> date +%M}}}
{def> time-sec> {trim:{sys> date +%S}}}

{def> date-year> {trim:{sys> date +%Y}}}
{def> date-month> {trim:{sys> date +%m}}}
{def> date-day> {trim:{sys> date +%d}}}